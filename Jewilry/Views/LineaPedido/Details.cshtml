@model IEnumerable<Jewilry.Models.LineaPedidoViewModel>

<div class="p-3">
    <table class="table">

        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FotoArticulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreArticulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img style="max-width:20%;" src="~/Content/Images/@Html.DisplayFor(modelItem => item.FotoArticulo)" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreArticulo)
                </td>
                <td>
                    <input type="button" value="-" class="btn btn-primary" onclick="location.href='@Url.Action("Menos", "LineaPedido", new { id = item.Id })'" />
                    @Html.DisplayFor(modelItem => item.Unidades)
                    <input type="button" value="+" class="btn btn-primary" onclick="location.href='@Url.Action("Cantidad", "LineaPedido", new { id = item.Id })'" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "text-decoration-none enlaces" })
                </td>
            </tr>
        }
        <tfoot>

            <tr>
                <td colspan="4"></td>
                <td>
                    <div>
                        Total: @Session["total"]€
                    </div>
                </td>
            </tr>

        </tfoot>


    </table>
    @Html.ActionLink("Tramitar", "ResumenPedido", "Pedido", null, new { @class = "btn btn-primary" })
</div>

