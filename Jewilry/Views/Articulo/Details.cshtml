@model Jewilry.Models.ArticuloViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>


<div>
    <div class="row">
        <div class="col-lg-5">
            <img class="card-img-top max-width: 100%" src=@Html.DisplayFor(model => model.Foto) alt="Card image cap">
        </div>
        <div class="col-lg-7 text-center bg-light">

            <h2>@Html.DisplayFor(model => model.Nombre)</h2>
            
        </div>
    </div> 
</div>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stock)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>

    </dl>
</div>

