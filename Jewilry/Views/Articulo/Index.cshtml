@model IEnumerable<Jewilry.Models.ArticuloViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Articulos</h2>



<div class="row">
    @foreach (var item in Model)
    {
        
        <div class="col-md-6 col-lg-3 col-sm-12">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top max-width: 100%" src=@Html.DisplayFor(modelItem => item.Foto) alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Precio)</p>
                    @Html.ActionLink("Comprar", "Details", routeValues: new { id = item.Id }, htmlAttributes: new {@class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>

