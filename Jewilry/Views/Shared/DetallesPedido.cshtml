@model IEnumerable<Jewilry.Models.LineaPedidoViewModel>

<div class="">

    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FotoArticulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreArticulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img style="max-width:20%;" src="~/Content/Images/@Html.DisplayFor(modelItem => item.FotoArticulo)" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreArticulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unidades)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)€
                </td>

            </tr>
        }
    <tfoot>

        @if (Session["totaldesc"] == null)
        {
            <tr>

                <td colspan="2"></td>

                <td class="text-right">
                    Total: @Session["total"]€
                </td>

            </tr>
        }
        else
        {
            <tr>
                <td colspan="2"></td>
                <td >
                    <div style="text-decoration:line-through;">
                        Total: @Session["total"]€
                    </div>
                    Total: @Convert.ToDouble(Session["totaldesc"])€
                </td>
            </tr>

        }

    </tfoot>

    </table>


</div>
