@model IEnumerable<Jewilry.Models.ValoracionViewModel>

<h4>Valoraciones</h4>



@foreach (var item in Model)
{
    <div class="card mb-4 col-lg-6">
        <div class="card-header">
            @{
                float i = 0;
                for (i = 1; i <= item.Valor && i <= 5; i++)
                {
                    <span class="starGlowN"></span>
                }
                if (i - 1 < item.Valor && i - 1 != 5)
                {
                    <span class="starMediaN"></span>
                }
                for (i = (item.Valor + 1); i <= 5; i++)
                {
                    <span class="starFadeN"></span>
                }
            }
        </div>
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Cliente.Nombre)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Comentario)</p>
                
        </div>
    </div>
        
}


