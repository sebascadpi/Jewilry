@using Microsoft.AspNet.Identity
@using JewilryGenNHibernate.EN.JoyeriaJewirly;

@{
    string nombreUsu = "";

    if (Session["Usuario"] != null)
    {
        nombreUsu = ((ClienteEN)Session["Usuario"]).Nombre;
    }
}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    
    <li>
        @Html.ActionLink("Hola " + nombreUsu + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link link-light" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link link-light">Cerrar sesión</a></li>


</ul>
    }
}
else
{
    <ul class="navbar-nav ms-auto">
        <li class="nav-item">@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link link-light" })</li>
        <li class="nav-item">@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link link-light" })</li>
    </ul>
}
