@model Jewilry.Models.PedidoViewModel

@{
    ViewBag.Title = "ResumenPedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ResumenPedido</h2>
<div class="row">
    <div class="col-6">
        @{ Html.RenderAction("Navigation", "LineaPedido");}
    </div>

    <div class="col-6">
